{
    "include": ["src/**/*"],
    "compilerOptions": {     
      "baseUrl": "./src",
      "outDir": "./dist",
      "moduleResolution": "node",
      "module": "es2015",
      "target": "ESNext",
      "jsx": "react",
      "sourceMap": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true
    }   
}