{
    "include": ["src/**/*"],
    "compilerOptions": {     
      "baseUrl": "./src",
      "paths": {
        "@app/*": ["app/*"],
        "@app-types/*": ["types/*"],
        "@components/*": ["app/components/*"],
        "@http/*": ["http/*"],
        "@pages/*": ["app/pages/*"],
        "@services/*": ["services/*"],
      },
      "outDir": "./dist",
      "moduleResolution": "node",
      "module": "es2015",
      "target": "ESNext",
      "jsx": "react",
      "sourceMap": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true
    }   
}